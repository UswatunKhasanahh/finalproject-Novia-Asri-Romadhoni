<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".Register"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:src="@drawable/reg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#0d6e6a"
        android:textSize="26dp"
        android:textStyle="bold"
        android:letterSpacing="0.03"/>

    <EditText
        android:hint="Full Name"
        android:id="@+id/et_rname"
        android:inputType="textPersonName"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/forget"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/et_remail"
        android:hint="Email"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/forget"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/forget"
        android:hint="No Telepon"
        android:id="@+id/et_rtelepon"
        android:inputType="number"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/forget"
        android:hint="Password"
        android:id="@+id/et_rpassword"
        android:inputType="textPassword"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"/>

    <LinearLayout
        android:id="@+id/ll_accept"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:shadowColor="#0d6e6a" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0d6e6a"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="I Accept Terms and Regulation"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ps_register"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="REGISTER"
        android:background="@drawable/forget"
        android:backgroundTint="#0d6e6a"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/btn_register"/>

    <TextView
        android:id="@+id/tv_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In"
        android:textColor="#0d6e6a"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>